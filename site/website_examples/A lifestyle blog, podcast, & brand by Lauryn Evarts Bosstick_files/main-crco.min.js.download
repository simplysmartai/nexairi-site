const openSearchBtn=document.querySelector('header .open-search');const closeSearchBtn=document.querySelector('header .close-search');const searchContainer=document.querySelector('#site-search');openSearchBtn.addEventListener("click",()=>{document.body.classList.add('no-scroll');searchContainer.classList.add("show");document.getElementById('search-form-2-input').select();if(window.innerWidth<1024){closeSearchBtn.style.display='block';openSearchBtn.style.display='none'}});closeSearchBtn.addEventListener('click',()=>{searchContainer.classList.remove('show');document.body.classList.remove('no-scroll');closeSearchBtn.style.display='none';openSearchBtn.style.display='block'});if(window.innerWidth>=1024){document.addEventListener("click",(event)=>{const searchContainer=document.querySelector('#site-search');const searchInputContainer=document.querySelector('#site-search .search-input-container');if(searchContainer.classList.contains('show')&&!searchInputContainer.contains(event.target)&&!openSearchBtn.contains(event.target)){searchContainer.classList.remove('show');document.body.classList.remove('no-scroll')}})}
document.addEventListener('DOMContentLoaded',function(){const observer=new MutationObserver(function(mutationsList,observer){mutationsList.forEach(function(mutation){if(mutation.type==='childList'){const input=document.querySelector('#site-footer .formkit-input');if(input){input.setAttribute('placeholder','Enter your email');observer.disconnect()}
const detailsElements=document.querySelectorAll('#site-footer details');detailsElements.forEach(function(details){if(window.innerWidth>=1024){details.setAttribute('open','')}})}})});const targetNode=document.querySelector('#site-footer');if(targetNode){observer.observe(targetNode,{childList:!0,subtree:!0,})}
function openDetailsOnLargeScreens(){if(window.innerWidth>=1024){const detailsElements=document.querySelectorAll('#site-footer details');detailsElements.forEach(function(details){details.setAttribute('open','')})}}
openDetailsOnLargeScreens();window.addEventListener('resize',openDetailsOnLargeScreens);if(window.innerWidth<1024){$('.shop .items').slick({slidesToShow:1,slidesToScroll:1,infinite:!1,centerMode:!1,arrows:!1,focusOnSelect:!0,centerPadding:'36px',variableWidth:!0,});$('.shop .items .slick-slide').css({'width':'279px','margin-right':'36px'})}});document.querySelector('#site-search .search-input-container svg').addEventListener('click',()=>{const searchForm=document.querySelector('#site-search form');if(searchForm){searchForm.submit()}});class MobileNavigation{constructor(){this.container=document.getElementById('mobile-navigation');this.mobileMenuPages=this.container.querySelectorAll('.mobile-menu-page');this.init()}
init(){this.handleSlidingMenu();this.handleBackButton()}
handleSlidingMenu(){this.container.querySelectorAll('.has-submenu').forEach(link=>{link.addEventListener("click",(e)=>{e.preventDefault();e.stopPropagation();const targetPage=e.currentTarget.getAttribute("data-target-page");if(!targetPage)return;this.navigateToPage(targetPage)})})}
handleBackButton(){this.container.querySelectorAll('.back-btn').forEach(button=>{button.addEventListener("click",(e)=>{e.preventDefault();e.stopPropagation();const targetPage=e.currentTarget.getAttribute("data-target-page");if(!targetPage)return;this.navigateToPage(targetPage)})})}
navigateToPage(targetPage){this.mobileMenuPages.forEach(page=>{if(page.getAttribute("data-page")===targetPage){page.classList.add("active");page.classList.remove("previous")}else if(page.classList.contains("active")){page.classList.add("previous");page.classList.remove("active")}else{page.classList.remove("active","previous")}})}}
document.addEventListener('DOMContentLoaded',()=>{new MobileNavigation()})