document.addEventListener('DOMContentLoaded',function(){const videoWrapper=document.querySelector('.video-wrapper');const playButton=document.querySelector('.play-button');const video=document.querySelector('.shopify-video');if(playButton&&video){let isPlaying=!1;playButton.addEventListener('click',function(){if(!isPlaying){video.play();videoWrapper.classList.add('playing');isPlaying=!0}else{video.pause();videoWrapper.classList.remove('playing');isPlaying=!1}});video.addEventListener('play',function(){isPlaying=!0;videoWrapper.classList.add('playing')});video.addEventListener('pause',function(){isPlaying=!1;videoWrapper.classList.remove('playing')});video.addEventListener('ended',function(){isPlaying=!1;videoWrapper.classList.remove('playing');video.currentTime=0});const updateControls=()=>{if(isPlaying){video.controls=!0}else{video.controls=!1}};video.addEventListener('play',updateControls);video.addEventListener('pause',updateControls);video.addEventListener('ended',updateControls)}})